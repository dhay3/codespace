{
  "editor.fontSize": 17,
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.autoIndentOnPaste": true,
  "editor.wordWrap": "on",
  "workbench.sideBar.location": "right",
  "extensions.ignoreRecommendations": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/.idea": true
  },
  "ruff.configuration": {
    "format": {
      "quote-style": "single"
    }
  },
  "makefile.configureOnOpen": false,
}